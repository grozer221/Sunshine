@model Sunshine.Areas.Admin.ViewModels.SubMenusCreateViewModel

@{
    ViewData["Title"] = "Створити під меню (Адмін)";

}

<h1>Створити під меню</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubMenu.Name" class="control-label"></label>
                <input asp-for="SubMenu.Name" class="form-control" />
                <span asp-validation-for="SubMenu.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubMenu.Text" class="control-label"></label>
                <textarea asp-for="SubMenu.Text" class="form-control"></textarea>
                <span asp-validation-for="SubMenu.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubMenu.MenuId" class="control-label"></label>
                <select asp-for="SubMenu.MenuId" class="form-control"
                        asp-items="@(new SelectList(Model.Menus, nameof(Menu.Id), nameof(Menu.Name)))"></select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Створити</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary">Повернутися назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        CKEDITOR.replace("SubMenu_Text");
    </script>
}
