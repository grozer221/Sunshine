@model Sunshine.Models.File

@{
    ViewData["Title"] = "Видалити файл (Адмін)";
}

<h1>Видалити  файл</h1>

<h3>Ви впевнені, що бажаєте видалити?</h3>
<div>
    <h4>File</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Upload)
        </dt>
        <dd class="col-sm-10">
            @{
                string[] extensions = { "jpg", "png" };
                string extension = System.IO.Path.GetExtension(Model.Name);
                if (extensions.Any(x => extension.EndsWith(x)))
                {
                    <img src="@Model.Url" width="100" />
                    @*<img src="/media/files/@Model.File.Name" width="100" />*@
                }
                else
                {
                    <img src="/media/images/file.png" width="100" />
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-primary">Повернутися назад</a>
        <button type="submit" class="btn btn-danger">Видалити</button>
    </form>
</div>
